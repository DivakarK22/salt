{
    "checks": {
       "redis": {
         "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-process.rb -p redis",
         "subscribers": [
           "sensu-master"
         ],
         "interval": 10
       },
       "httpd": {
         "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-process.rb -p httpd",
         "subscribers": [
           "client:ftp"
         ],
         "interval": 10
       },
       "salt-minion": {
         "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-process.rb -p salt-minion",
         "subscribers": [
           "el7"
         ],
         "interval": 10
       },
       "sshd": {
         "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-process.rb -p sshd",
         "subscribers": [
           "sensu-master",
           "el7"
         ],
         "interval": 10
       },
       "check-cpu": {
         "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-process.rb -c 170",
         "subscribers": [
           "sensu-master",
           "el7"
         ],
         "interval": 10
       },
       "check-memory": {
        "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-memory.rb  -w 60 -c 30",
        "subscribers": [
          "el7"
        ],
        "interval": 10
      },
      "jenkins-http": {
        "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-http.rb -u http://jenkins:8080 -U devop -a devops",
        "subscribers": [
          "client:jenkins"
        ],
        "interval": 100
      },
      "grafana-http": {
        "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-http.rb -u http://grafana:3000 -U admin -a devops",
        "subscribers": [
          "client:grafana"
        ],
        "interval": 100
      },
      "node-exporter": {
        "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-process.rb -p node_exporter",
        "subscribers": [
          "el7"
        ],
        "interval": 10
      },
      "prometheus": {
        "command": "sudo /usr/local/rvm/rubies/ruby-2.7.2/bin/ruby /etc/sensu/conf.d/checks/check-process.rb -p prometheus",
        "subscribers": [
          "client:grafana"
        ],
        "interval": 10
      },
      "py-url-check": {
        "command": "python3 /home/vagrant/url.py http://sensu1:3000",
        "subscribers": [
          "client:grafana"
        ],
        "interval": 10
      }
      
  }

}
